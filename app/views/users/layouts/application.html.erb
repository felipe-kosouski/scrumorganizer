<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:head_title)) %></title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'users/application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'users/application', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= render 'layouts/shim' %>
</head>

<body>

  <%= render 'users/layouts/navbar' %>

  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <%= render 'users/layouts/sidebar' %>
      </div>

      <div class="col-md-10">
        <%= render 'shared/flash_messages' %>
        <div class="content">
          <%= yield %>
        </div>
      </div>

      <%= debug(params) if Rails.env.development? %>
    </div>
  </div>

</body>
</html>
